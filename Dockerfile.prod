FROM node:alpine

ENV ENV production

WORKDIR /usr/src/app

COPY ./package.json ./
COPY ./package-lock.json ./

COPY ./ ./

RUN ls -a

# RUN npm ci --only=production
RUN npm install
RUN npm run build
# RUN npm run minify:html

EXPOSE 8080

HEALTHCHECK --interval=30s --timeout=15s CMD curl -s http://localhost:8080 || exit 1

CMD ["npm", "run", "start"]
