{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "removeComments": false, // we need jsdoc comments for the api docs

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* If transpiling with TypeScript: */
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,

    /* If your code doesn't run in the DOM: */
    "lib": ["es2022"]
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.mts",
    "**/*.test.mjs",
    "**/*.test.js",
    "**/*.spec.ts",
    "src/tests/**/*",
    "postcss.config.js",
    "dist",
    "coverage",
    "public",
    "vitest.config.mts"
  ]
}
