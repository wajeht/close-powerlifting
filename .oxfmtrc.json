{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "tabWidth": 2,
  "semi": true,
  "useTabs": false,
  "singleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "printWidth": 100,
  "ignorePatterns": [
    "node_modules",
    "coverage",
    "logs",
    "coverage*/",
    "package-lock.json",
    "dist",
    "db.sqlite",
    "db.sqlite-shm",
    "db.sqlite-wal",
    "./src/db/db.sqlite",
    "./public/js/*",
    "/public/js/*",
    "src/routes/**/*.html"
  ]
}
