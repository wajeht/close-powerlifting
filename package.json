{
  "name": "close-powerlifting",
  "version": "0.0.1",
  "description": "An intuitive REST API for the OpenPowerlifting database",
  "keywords": [
    "powerlifting"
  ],
  "license": "MIT",
  "author": "wajeht",
  "main": "dist/src/server.js",
  "scripts": {
    "start": "export APP_ENV=production && node --no-warnings --max-old-space-size=512 ./dist/src/server.js",
    "dev": "concurrently --kill-others --names \"EXPRESS,TAILWIND\" -c \"bgGreen.black,bgCyan.black\" \"npm run dev:api\" \"npm run dev:tailwind\"",
    "dev:only": "export APP_ENV=development && tsx watch --no-warnings --clear-screen=false ./src/server.ts",
    "dev:api": "export APP_ENV=development && npm run db:prepare:dev && exec tsx watch --no-warnings --clear-screen=false ./src/server.ts",
    "dev:tailwind": "npx @tailwindcss/cli -i ./public/css/tailwind.css -o ./public/css/style.css --watch",
    "build": "npm run build:tailwind:minify && npm run build:server",
    "build:prod": "npm run build && npm run minify",
    "build:server": "rm -rf ./dist && tsgo",
    "build:tailwind": "rm ./public/css/style.css && npx @tailwindcss/cli -i ./public/css/tailwind.css -o ./public/css/style.css",
    "build:tailwind:minify": "rm ./public/css/style.css && npx @tailwindcss/cli -i ./public/css/tailwind.css -o ./public/css/style.css --minify",
    "minify": "tsx scripts/minify.ts",
    "update:deps": "npx npm-check -u",
    "check:deps": "npx depcheck",
    "test:watch": "APP_ENV=testing NODE_ENV=testing NODE_NO_WARNINGS=1 vitest",
    "test": "APP_ENV=testing NODE_ENV=testing NODE_NO_WARNINGS=1 vitest --run",
    "test:coverage": "APP_ENV=testing NODE_ENV=testing vitest run --coverage",
    "test:ci": "APP_ENV=testing NODE_ENV=testing vitest run --coverage.enabled --coverage.reporter='text-summary'",
    "format:check": "oxfmt --check .",
    "format": "oxfmt --write . > /dev/null",
    "format:verbose": "oxfmt --write .",
    "lint:check": "oxlint .",
    "lint": "oxlint --fix .",
    "db:prepare:dev": "npm run db:migrate:latest && npm run db:seed:run",
    "db:migrate:make": "tsx ./node_modules/knex/bin/cli.js migrate:make --knexfile=./src/db/knexfile.ts",
    "db:migrate:latest": "tsx ./node_modules/knex/bin/cli.js migrate:latest --knexfile=./src/db/knexfile.ts",
    "db:migrate:rollback": "tsx ./node_modules/knex/bin/cli.js migrate:rollback --knexfile=./src/db/knexfile.ts",
    "db:seed:make": "tsx ./node_modules/knex/bin/cli.js seed:make --knexfile=./src/db/knexfile.ts",
    "db:seed:run": "tsx ./node_modules/knex/bin/cli.js seed:run --knexfile=./src/db/knexfile.ts",
    "rmds": "find . -name '.DS_Store' -delete",
    "update:fixtures": "tsx ./scripts/update-fixtures.ts",
    "generate:og": "tsx ./scripts/generate-og-image.ts",
    "optimize:images": "tsx ./scripts/optimize-images.ts"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "better-sqlite3": "^12.6.2",
    "compression": "^1.7.5",
    "concurrently": "^9.1.2",
    "connect-flash": "^0.1.1",
    "connect-session-knex": "^5.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-sync": "^4.2.1",
    "dotenv": "^17.2.3",
    "eta": "^4.5.0",
    "express": "^5.2.1",
    "express-jsdoc-swagger": "^1.8.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "jsdom": "^27.4.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "^0.0.40",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/jsdom": "^27.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.5",
    "@types/supertest": "^6.0.2",
    "@typescript/native-preview": "^7.0.0-dev.20260109.1",
    "@vitest/coverage-v8": "^4.0.16",
    "html-minifier-terser": "^7.2.0",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "satori": "^0.18.3",
    "sharp": "^0.34.5",
    "supertest": "^7.2.2",
    "terser": "^5.44.1",
    "tsx": "^4.19.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=24.9.0"
  }
}
