{
  "name": "close-powerlifting",
  "version": "0.0.1",
  "description": "an intuitive api for open-powerlifting database",
  "main": "server.ts",
  "scripts": {
    "start": "node ./dist/src/server.js",
    "dev": "concurrently --kill-others --names \"EXPRESS,TAILWIND\" -c \"bgGreen.black,bgCyan.black\" \"npm run dev:api\" \"npm run dev:tailwind\"",
    "dev:api": "nodemon ./src/server.ts",
    "dev:tailwind": "npx tailwindcss -i ./src/public/css/tailwind.css -o ./src/public/css/style.css --watch",
    "build": "npm run build:tailwind && npm run build:api && npm run minify:html",
    "build:api": "tsc",
    "build:tailwind": "npx tailwindcss -i ./src/public/css/tailwind.css -o ./src/public/css/style.css --minify",
    "minify:html": "html-minifier --input-dir ./src/views --output-dir ./src/views --collapse-whitespace --file-ext html"
  },
  "keywords": [
    "powerlifting"
  ],
  "author": "wajeht",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "^0.0.37",
    "@types/cors": "^2.8.12",
    "@types/ejs": "^3.1.1",
    "@types/express": "^4.17.14",
    "@types/express-ejs-layouts": "^2.5.0",
    "@types/express-session": "^1.17.5",
    "@types/html-minifier": "^4.0.2",
    "@types/jsdom": "^20.0.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/nodemailer": "^6.4.6",
    "nodemon": "^2.0.20",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "autoprefixer": "^10.4.12",
    "axios": "^1.1.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "concurrently": "^7.4.0",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-ejs-layouts": "^2.5.1",
    "express-jsdoc-swagger": "^1.8.0",
    "express-rate-limit": "^6.6.0",
    "express-session": "^1.17.3",
    "helmet": "^6.0.0",
    "html-minifier": "^4.0.0",
    "http-status-codes": "^2.2.0",
    "jsdom": "^20.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.11.0",
    "mongoose": "^6.6.6",
    "nodemailer": "^6.8.0",
    "tailwindcss": "^3.1.8",
    "zod": "^3.19.1"
  }
}
