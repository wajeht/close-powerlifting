{
  "name": "close-powerlifting",
  "version": "0.0.1",
  "description": "an intuitive api for open-powerlifting database",
  "keywords": [
    "powerlifting"
  ],
  "license": "MIT",
  "author": "wajeht",
  "main": "dist/src/server.js",
  "scripts": {
    "start": "export APP_ENV=production && node --no-warnings --max-old-space-size=512 ./dist/src/server.js",
    "dev": "concurrently --kill-others --names \"EXPRESS,TAILWIND\" -c \"bgGreen.black,bgCyan.black\" \"npm run dev:api\" \"npm run dev:tailwind\"",
    "dev:only": "export APP_ENV=development && tsx watch --no-warnings --clear-screen=false ./src/server.ts",
    "dev:api": "export APP_ENV=development && tsx watch --no-warnings --clear-screen=false ./src/server.ts",
    "dev:tailwind": "npx tailwindcss -i ./public/css/tailwind.css -o ./public/css/style.css --watch",
    "build": "npm run build:tailwind && npm run build:server",
    "build:server": "rm -rf ./dist && tsc",
    "build:tailwind": "npx tailwindcss -i ./public/css/tailwind.css -o ./public/css/style.css --minify",
    "update:deps": "npx npm-check -u",
    "check:deps": "npx depcheck",
    "test:watch": "APP_ENV=testing NODE_ENV=testing NODE_NO_WARNINGS=1 vitest",
    "test": "APP_ENV=testing NODE_ENV=testing NODE_NO_WARNINGS=1 vitest --run",
    "test:coverage": "APP_ENV=testing NODE_ENV=testing vitest run --coverage",
    "test:ci": "APP_ENV=testing NODE_ENV=testing vitest run --coverage.enabled --coverage.reporter='text-summary'",
    "format:check": "oxfmt --check .",
    "format": "oxfmt --write . > /dev/null",
    "format:verbose": "oxfmt --write .",
    "lint:check": "oxlint .",
    "lint": "oxlint --fix .",
    "db:migrate:make": "tsx ./node_modules/knex/bin/cli.js migrate:make --knexfile=./src/db/knexfile.ts",
    "db:migrate:latest": "tsx ./node_modules/knex/bin/cli.js migrate:latest --knexfile=./src/db/knexfile.ts",
    "db:migrate:rollback": "tsx ./node_modules/knex/bin/cli.js migrate:rollback --knexfile=./src/db/knexfile.ts",
    "db:seed:make": "tsx ./node_modules/knex/bin/cli.js seed:make --knexfile=./src/db/knexfile.ts",
    "db:seed:run": "tsx ./node_modules/knex/bin/cli.js seed:run --knexfile=./src/db/knexfile.ts",
    "rmds": "find . -name '.DS_Store' -delete"
  },
  "dependencies": {
    "@faker-js/faker": "^9.3.0",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.7.0",
    "compression": "^1.7.5",
    "concurrently": "^9.1.2",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-ejs-layouts": "^2.5.1",
    "express-jsdoc-swagger": "^1.8.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "html-minifier": "^4.0.0",
    "http-status-codes": "^2.3.0",
    "jsdom": "^25.0.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "qs": "^6.14.0",
    "tailwindcss": "^3.4.17",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.12",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "^0.0.40",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/express-session": "^1.18.1",
    "@types/html-minifier": "^4.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.8",
    "oxfmt": "^0.21.0",
    "oxlint": "^0.16.6",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
