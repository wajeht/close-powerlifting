{
  "name": "close-powerlifting",
  "version": "0.0.1",
  "description": "an intuitive api for open-powerlifting database",
  "main": "server.ts",
  "scripts": {
    "start": "node ./dist/src/server.js",
    "dev": "concurrently --kill-others --names \"EXPRESS,TAILWIND\" -c \"bgGreen.black,bgCyan.black\" \"npm run dev:api\" \"npm run dev:tailwind\"",
    "dev:api": "nodemon ./src/server.ts",
    "dev:tailwind": "npx tailwindcss -i ./src/public/tailwind/tailwind.css -o ./src/public/css/style.css --watch",
    "build": "npm run build:tailwind && npm run build:api",
    "build:api": "tsc",
    "build:tailwind": "npx tailwindcss -i ./src/public/tailwind/tailwind.css -o ./src/public/css/style.css"
  },
  "keywords": [
    "powerlifting"
  ],
  "author": "wajeht",
  "license": "MIT",
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/ejs": "^3.1.1",
    "@types/express": "^4.17.14",
    "@types/express-ejs-layouts": "^2.5.0",
    "@types/jsdom": "^20.0.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "autoprefixer": "^10.4.12",
    "axios": "^1.1.3",
    "compression": "^1.7.4",
    "concurrently": "^7.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-ejs-layouts": "^2.5.1",
    "express-jsdoc-swagger": "^1.8.0",
    "helmet": "^6.0.0",
    "http-status-codes": "^2.2.0",
    "jsdom": "^20.0.1",
    "tailwindcss": "^3.1.8",
    "zod": "^3.19.1"
  }
}
