{
  "name": "close-powerlifting",
  "version": "0.0.1",
  "description": "an intuitive api for open-powerlifting database",
  "main": "server.ts",
  "scripts": {
    "start": "node ./dist/src/server.js",
    "dev": "concurrently --kill-others --names \"EXPRESS,TAILWIND\" -c \"bgGreen.black,bgCyan.black\" \"npm run dev:api\" \"npm run dev:tailwind\"",
    "dev:api": "nodemon --files ./src/server.ts",
    "dev:tailwind": "npx tailwindcss -i ./public/css/tailwind.css -o ./public/css/style.css --watch",
    "build": "npm run build:tailwind && npm run build:api && npm run minify:html",
    "build:api": "tsc",
    "build:tailwind": "npx tailwindcss -i ./public/css/tailwind.css -o ./public/css/style.css --minify",
    "minify:html": "html-minifier --input-dir ./src/views --output-dir ./src/views --collapse-whitespace --minify-js --minify-css --remove-comments --file-ext html",
    "test": "vitest",
    "update:deps": " npx npm-check -u",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint:check": "eslint .",
    "lint": "eslint --fix ."
  },
  "keywords": [
    "powerlifting"
  ],
  "author": "wajeht",
  "license": "MIT",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "^0.0.37",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.17",
    "@types/express-ejs-layouts": "^2.5.1",
    "@types/express-session": "^1.17.7",
    "@types/html-minifier": "^4.0.2",
    "@types/jsdom": "^21.1.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node-cron": "^3.0.7",
    "@types/nodemailer": "^6.4.8",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "nodemon": "^1.19.4",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vitest": "^0.31.1"
  },
  "dependencies": {
    "@adminjs/express": "^5.1.0",
    "@adminjs/mongoose": "^3.0.3",
    "@faker-js/faker": "^8.0.1",
    "adminjs": "^6.8.7",
    "autoprefixer": "^10.4.14",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "concurrently": "^8.0.1",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-ejs-layouts": "^2.5.1",
    "express-jsdoc-swagger": "^1.8.0",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "html-minifier": "^4.0.0",
    "http-status-codes": "^2.2.0",
    "ioredis": "^5.3.1",
    "jsdom": "^22.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^4.13.0",
    "mongoose": "^6.10.3",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.2",
    "pino": "^8.11.0",
    "pino-pretty": "^9.4.0",
    "tailwindcss": "^3.3.2",
    "zod": "^3.21.4"
  }
}
